{
  "name": "@pilotpirxie/ghostwriter",
  "version": "1.0.10",
  "description": "CLI to split ebooks into chapters and paraphrase with citations.",
  "repository": "https://github.com/pilotpirxie/ghostwriter.git",
  "author": "pilotpirxie <10637666+pilotpirxie@users.noreply.github.com>",
  "license": "MIT",
  "keywords": [
    "cli",
    "summarization",
    "epub",
    "pdf",
    "markdown",
    "txt",
    "md",
    "ebook",
    "split",
    "paraphrase",
    "text-processing",
    "writing-assistant"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/types.d.ts",
  "bin": {
    "ghostwriter": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "ts-node src/index.ts",
    "test": "time tsc --noEmit && node --import tsx --test --experimental-test-coverage **/**/*.spec.ts",
    "lint": "prettier . --check && tsc --noEmit",
    "fix": "prettier . --write",
    "prepare": "npm run build && chmod +x dist/index.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.26.1",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "epub2": "^3.0.1",
    "openai": "^4.73.0",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/pdf-parse": "^1.1.4",
    "prettier": "3.7.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20"
  }
}
